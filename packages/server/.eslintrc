{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "plugin:import/typescript",
    "plugin:prettier/recommended",
    "airbnb",
    "airbnb-typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "no-console": "off",
    "consistent-return": "off",
    "import/prefer-default-export": "warn", // not enough to make it an error
    "object-curly-newline": "off", // I just don like it
    "no-underscore-dangle": "off", // MongoDB uses _id
    "operator-linebreak": "off"
  }
}
